<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Bir Yorum Bırakın</h4>
    <p class="mb-4">
        İşaretli alanları doldurmanız gerekmektedir!
    </p>
    <form method="post" asp-controller="Comment" asp-action="AddComment">

        <div class="form-group">
            <textarea type="text" name="CommentContent" class="form-control" placeholder="Yorumunuzu giriniz..." required="" spellcheck="false"></textarea>
        </div>
        <div class="input-grids row">

            <div class="form-group col-lg-6">
                <input type="text" name="CommentUser" class="form-control" placeholder="Adınız soyadınız..." required="">
            </div>
            <div class="form-group col-lg-6">
                <input type="text" name="Destinationid" class="form-control" placeholder="DestinationID*" required="">
            </div>
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary" type="submit" @*id="btnSave"*@>Yorum Yap </button>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
